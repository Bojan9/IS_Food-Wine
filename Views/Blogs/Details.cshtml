@model bojan_recipe.Models.Blog

@{
    ViewData["Title"] = "Details";
}

<h1>@Html.DisplayFor(model => model.Name)</h1>
<hr />

<div>
    <dl class="row">
        <div class="col-md-2"></div>
        <div class="col-md-8">
            <img src="@Model.ImageUrl" class="img-fluid" alt="Recipe Image">
        </div>
        <div class="col-md-2"></div>
    </dl>
</div>

<div>
    <dl class="row">
        <dd class="col-md-12" style="white-space: pre-line;">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>
</div>

<div class="mt-3">
    @if (User.Identity.Name == "admin@mail.com")
    {
        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model?.Id">Delete</a>
    }
    <a class="btn btn-secondary" asp-action="Index">Back to List</a>
</div>
